{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "import-notation": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["apply", "reference", "tailwind", "layer"]
      }
    ],
    "declaration-no-important": null
  },
  "overrides": [
    {
      "files": ["**/*.vue"],
      "customSyntax": "postcss-html"
    }
  ]
}
